{
  "git": {
    "commitMessage": "chore: release v${version}"
  },
  "github": {
    "release": true
  },
  "npm": false,
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "changelog.md"
    },
    "@release-it/bumper": {
      "in": "package.json",
      "out": "package.json"
    }
  }
}
